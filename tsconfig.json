{
  "compilerOptions": {
    "target": "ES2021",
    "module": "CommonJS",
    "lib": [
      "ES2021"
    ],
    "outDir": "./dist", // Use lib for npm package.
    "alwaysStrict": true,
    "declaration": true, // Use false for webpack.
    "experimentalDecorators": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "noFallthroughCasesInSwitch": false,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "strict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": false,
    "baseUrl": ".",
    "paths": {
      "@@src/*": [
        "src/*"
      ]
    }
  },
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  },
  "include": [
    "./src",
    "./test"
  ]
}
